<form>
    <div class="dialog-content">
        {{#each damageParts}}
            <div class="configure-damage__damage-row flexrow">
                <div class="configure-damage__type flex1">{{lookup ../damageLabels type}}</div>
                <div class="configure-damage__formula flex2">{{formula}}</div>
            </div>
        {{/each}}
        <input class="configure-damage__custom-damage" placeholder="{{localize "wire.configure-damage.custom-placeholder"}}" type="text" />
    </div>
    <div class="dialog-buttons">
        <button type="submit" class="dialog-button" data-button="roll">
            {{localize "wire.configure-damage.roll"}}
        </button>
    </div>
</form>
